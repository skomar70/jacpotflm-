@Client.on_callback_query()
async def cb_handler(client: Client, query: CallbackQuery):
    if query.data == "close_data":
        await query.message.delete()
    # ... ‡¶Ö‡¶®‡ßç‡¶Ø‡¶æ‡¶®‡ßç‡¶Ø ‡¶™‡ßÇ‡¶∞‡ßç‡¶¨‡ßá‡¶∞ callback ‡¶ï‡ßã‡¶° ‡¶è‡¶ñ‡¶æ‡¶®‡ßá ‡¶è‡¶ï‡¶á ‡¶•‡¶æ‡¶ï‡¶¨‡ßá ...
    
    # =================== ‡¶∏‡ßç‡¶ü‡¶æ‡¶∞‡ßç‡¶ü / ‡¶π‡ßã‡¶Æ ‡¶¨‡¶æ‡¶ü‡¶® ===================
    elif query.data == "start":
        buttons = [[
            InlineKeyboardButton('üíù Subscribe YouTube Channel üíó', url=f'http://youtube.com/@Tech_VJ')
            ],[
            InlineKeyboardButton('‚ôªÔ∏è Update Channel ‚ôªÔ∏è', url=f'https://t.me/VJ_Botz')
            ],[
            InlineKeyboardButton('üí∞ Earn Money üí∞', callback_data='earn_money')
            ],[
            InlineKeyboardButton('‚ÑπÔ∏è ùô∑ùöéùöïùöô', callback_data='help'),
            InlineKeyboardButton('üòä ùô∞ùöãùöòùöûùöù', callback_data='about')
